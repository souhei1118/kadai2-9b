<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <%= form_with url: user_search_path(@user), method: :get do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: 'btn btn-primary'  %>
      <% end %>

      <div id="search_result">
        <% if @search_book.present? %>
          <%= render 'search', search_book: @search_book %>
        <% end %>
      </div>
      <%= render 'book_index',books: @books %>
      <canvas id="myChart"></canvas>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
      var ctx = document.getElementById('myChart');
      var myChart = new Chart(ctx, {
          type: 'line',
          data: {
              labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前','今日'],
              datasets: [{
                  label: '投稿した本の数',
                  data: [
                    <%= @created_6day_ago.count  %>,
                    <%= @created_5day_ago.count  %>,
                    <%= @created_4day_ago.count  %>,
                    <%= @created_3day_ago.count  %>,
                    <%= @created_2day_ago.count  %>,
                    <%= @created_1day_ago.count  %>,
                    <%= @today_book.count  %>
                    ],
                  borderColor: "rgba(0,0,255,1)",
                  backgroundColor: "rgba(0,0,0,0)",
                  tension: 0.4
                  }]
              },
              options: {
                  scales: {
                      y: {
                          beginAtZero: true
                      }
                  }
              }
          });
      </script>
    </div>
  </div>
</div>
